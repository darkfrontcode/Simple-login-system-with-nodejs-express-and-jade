extends ../blocks/template.jade
block content

	h1!= title
	p!= message

	if authorised

		h1 This is the secret page.
		a(href="/login/logout") Logout

	else

		h1 You need login:

		form(action="/login", method="post")
			input(type="password", name="secret")
			input(type="submit", value="Authorise")